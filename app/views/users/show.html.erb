<div class="container">
  <h1 class="mt-5 offset-1">Profile page</h1>
  <div class="mt-4 mb-3">
    <div class="row">
      <div class="profile-box col-4 offset-4">
        <%= cl_image_tag @user.photo.key, height: 200, width: 200, crop: :fill, class: 'mt-4 profile-avatar' %>
        <h3 class="mt-3"><%= @user.name %></h3>
        <p><i class="fa-solid fa-earth-europe"></i> <%= @user.address %></p>
        <p><i class="fa-solid fa-envelope"></i> <%= @user.email %></p>
        <button class="button-52 mb-5" role="button">
          <%= link_to "Edit profile", edit_user_registration_path(@user), class: 'link' %>
        </button>
      </div>
    </div>
  </div>
</div>
