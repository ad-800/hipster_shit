<%= simple_form_for(@product) do |f| %>
  <%= f.input :title, input_html: { class: "white-background" } %>
  <%= f.input :description, input_html: { class: "white-background" } %>
  <%= f.input :price, input_html: { class: "white-background" } %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "submit product", class: "btn btn-primary" %>
<% end %>
