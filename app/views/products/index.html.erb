<h1 class="page-title pt-text"> Products</h1>

<ul class="cards">
  <% @products.each do |product| %>
      <%= link_to product_path(product) do %>
        <li class="card">
            <div class="card-image card-jake"></div>
            <div class="card-text">
              <h3 class="title"><%= product.title %></h3>
              <p class="card-content">
                <span class="description"><%= product.description %><br>
                <% if product.purchase %>
                  <img src="https://cdn-icons-png.flaticon.com/128/7511/7511680.png" width="80" height="80" alt="sold">
                <% else %>
                  Price : <%= product.price %>
                <% end %>
                </span>
              </p>
            </div>
        </li>
      <% end %>
  <% end %>
</ul>

<%= link_to "Add a new product", new_product_path %>
