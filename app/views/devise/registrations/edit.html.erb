<div class="container margin-big">
  <h2 class="mt-2 mb-4">Edit <%= resource_name.to_s.humanize %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name, hint:"Update your user name", required: false, input_html: { autocomplete: "name", class: "white-background" }  %>
      <%= f.input :address, hint:"Update your selling address", required: false, input_html: { autocomplete: "address", class: "white-background" } %>
      <%= f.input :photo, as: :file, hint:"Update your avatar", required: false, input_html: { autocomplete: "photo", class: "white-background" } %>
      <%= f.input :email, required: true, autofocus: true, required: false, input_html: { autocomplete: "email", class: "white-background" } %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,
                  hint: "leave it blank if you don't want to change it",
                  required: false,
                  input_html: { autocomplete: "new-password", class: "white-background" } %>
      <%= f.input :password_confirmation,
                  required: false,
                  input_html: { autocomplete: "new-password", class: "white-background" } %>
      <%= f.input :current_password,
                  hint: "we need your current password to confirm your changes",
                  required: true,
                  input_html: { autocomplete: "current-password", class: "white-background" } %>
    </div>

    <div class="form-actions mb-5">
      <%= f.button :submit, "Update" %>
      <%= link_to "cancel", user_path(current_user), class: 'btn btn-ghost' %>
    </div>
  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= link_to "cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <% link_to "back", :back %>
</div>
